{
    "name": "open-quiz-api",
    "version": "1.0.0",
    "description": "The open quiz api",
    "main": "index.js",
    "scripts": {
        "dev": "dotenv -e .env.development nodemon src/index.ts --devmode",
        "start": "node .",
        "prisma:update": "npx prisma db pull && npx prisma generate",
        "postinstall": "npx prisma generate",
        "docker:up": "docker-compose up --detach",
        "docker:down": "docker-compose down",
        "wait:for:it": "wait-for-it.sh localhost:5432",
        "test:integration": "yarn docker:up && yarn wait:for:it && dotenv -e .env.test yarn prisma migrate deploy && dotenv -e .env.test -- vitest --dir tests/integration --run --threads false",
        "test:unit": "dotenv -e .env.test -- vitest --dir src --threads false"
    },
    "author": "Josh Jeffers",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^4.8.0",
        "express": "^4.18.2",
        "zod": "^3.20.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.15",
        "@types/node": "^18.11.17",
        "@types/supertest": "^2.0.12",
        "dotenv": "^16.0.3",
        "dotenv-cli": "^6.0.0",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.1",
        "prisma": "^4.8.0",
        "rest-zod-prisma": "^1.0.4",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4",
        "vitest": "^0.26.2",
        "vitest-mock-extended": "^1.0.8"
    }
}
