generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "rest-zod-prisma"
  output  = "../src/zod"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model QuizQuestion {
  id            Int      @id @default(autoincrement())
  question      String   @db.VarChar(256)
  options       String[] /// @zod.min(1)
  correctOption Int      /// @zod.positive()
}
